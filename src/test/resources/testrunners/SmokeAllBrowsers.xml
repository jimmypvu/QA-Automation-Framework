<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Smoke Suite All Browsers" parallel="tests" thread-count="3" data-provider-thread-count="3">

    <listeners>
        <listener class-name="framework.listeners.TestListener" />
        <listener class-name="framework.listeners.AnnotationTransformer" />
    </listeners>

    <test name="Chrome Tests" preserve-order="false" parallel="methods" thread-count="3" enabled="true">
        <parameter name="browsers" value="chrome" />
        <groups>
            <run>
                <include name="setup" />
                <include name="web" />
            </run>
        </groups>
        <classes>
            <class name="jpvu.tests.webtests.RegistrationTests">
                <methods>
                    <include name="registerValidInfo" />
                </methods>
            </class>
            <class name="jpvu.tests.webtests.LoginTests">
                <methods>
                    <include name="loginValidCredentials" />
                    <include name="logoutSuccess" />
                </methods>
            </class>
            <class name="jpvu.tests.webtests.SearchTests">
                <methods>
                    <include name="searchForValidItem" />
                </methods>
            </class>
            <class name="jpvu.tests.webtests.CartTests">
                <methods>
                    <include name="addItemToCartFromHomePage" />
                    <include name="verifyCartTotal" />
                </methods>
            </class>
            <class name="jpvu.tests.webtests.CheckoutTests">
                <methods>
                    <include name="validUserCheckout" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Firefox Tests" preserve-order="false" parallel="methods" thread-count="3" enabled="true">
