<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestNG Suite All Browsers" verbose="3" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="framework.listeners.TestListener" />
        <listener class-name="framework.listeners.AnnotationTransformer" />
    </listeners>

    <test name="Chrome Tests" preserve-order="false" parallel="methods" thread-count="4" enabled="true">
        <parameter name="browsers" value="chrome" />
        <groups>
            <run>
                <include name="setup" />
                <include name="web" />
            </run>
        </groups>
        <classes>
            <class name="jpvu.tests.webtests.RegistrationTests" />
            <class name="jpvu.tests.webtests.LoginTests" />
            <class name="jpvu.tests.webtests.SearchTests" />
            <class name="jpvu.tests.webtests.CartTests" />
            <class name="jpvu.tests.webtests.CheckoutTests" />
            <class name="jpvu.tests.webtests.HomePageTests" />
        </classes>
    </test>

    <test name="Firefox Tests" preserve-order="false" parallel="methods" thread-count="4" enabled="true">
        <parameter name="browsers" value="firefox" />
        <groups>
            <run>
                <include name="setup" />
                <include name="web" />
            </run>
        </groups>
        <classes>
            <class name="jpvu.tests.webtests.RegistrationTests" />
            <class name="jpvu.tests.webtests.LoginTests" />
            <class name="jpvu.tests.webtests.SearchTests" />
            <class name="jpvu.tests.webtests.CartTests" />
            <class name="jpvu.tests.webtests.CheckoutTests" />
            <class name="jpvu.tests.webtests.HomePageTests" />
        </classes>
    </test>

    <test name="Edge Tests" preserve-order="false" parallel="methods" thread-count="4" enabled="true">
        <parameter name="browsers" value="edge" />
        <groups>
            <run>
                <include name="setup" />
                <include name="web" />
            </run>
        </groups>
        <classes>
            <class name="jpvu.tests.webtests.RegistrationTests" />
            <class name="jpvu.tests.webtests.LoginTests" />
            <class name="jpvu.tests.webtests.SearchTests" />
            <class name="jpvu.tests.webtests.CartTests" />
            <class name="jpvu.tests.webtests.CheckoutTests" />
            <class name="jpvu.tests.webtests.HomePageTests" />
        </classes>
    </test>

    <test name="API Tests" preserve-order="false" parallel="methods" thread-count="3" enabled="false">
        <groups>
            <run>
                <include name="api" />
            </run>
        </groups>
        <classes>
            <class name="jpvu.tests.apitests.ListUsersTests" />
        </classes>
    </test>

</suite>