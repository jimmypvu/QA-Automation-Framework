<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Crossbrowser Suite" parallel="tests" thread-count="3" data-provider-thread-count="3">

    <listeners>
        <listener class-name="org.jvu.listeners.TestListener" />
        <listener class-name="org.jvu.listeners.AnnotationTransformer" />
    </listeners>

    <test name="Chrome Tests" preserve-order="false" parallel="methods" thread-count="3" enabled="true">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="org.jvu.tests.RegistrationTests">
                <methods>
                    <include name="registerValidInfo" />
                </methods>
            </class>
            <class name="org.jvu.tests.LoginTests">
                <methods>
                    <include name="loginValidCredentials" />
                    <include name="logoutSuccess" />
                </methods>
            </class>
            <class name="org.jvu.tests.SearchTests">
                <methods>
                    <include name="searchForValidItem" />
                </methods>
            </class>
            <class name="org.jvu.tests.CartTests">
                <methods>
                    <include name="addItemToCartFromHomePage" />
                    <include name="verifyCartTotal" />
                </methods>
            </class>
            <class name="org.jvu.tests.CheckoutTests">
                <methods>
                    <include name="validUserCheckout" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Firefox Tests" preserve-order="false" parallel="methods" thread-count="3" enabled="true">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="org.jvu.tests.RegistrationTests">
                <methods>
                    <include name="registerValidInfo" />
                </methods>
            </class>
            <class name="org.jvu.tests.LoginTests">
                <methods>
                    <include name="loginValidCredentials" />
                    <include name="logoutSuccess" />
                </methods>
            </class>
            <class name="org.jvu.tests.SearchTests">
                <methods>
                    <include name="searchForValidItem" />
                </methods>
            </class>
            <class name="org.jvu.tests.CartTests">
                <methods>
                    <include name="addItemToCartFromHomePage" />
                    <include name="verifyCartTotal" />
                </methods>
            </class>
            <class name="org.jvu.tests.CheckoutTests">
                <methods>
                    <include name="validUserCheckout" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Edge Tests" preserve-order="false" parallel="methods" thread-count="3" enabled="true">
        <parameter name="browser" value="MicrosoftEdge" />
        <classes>
            <class name="org.jvu.tests.RegistrationTests">
                <methods>
                    <include name="registerValidInfo" />
                </methods>
            </class>
            <class name="org.jvu.tests.LoginTests">
                <methods>
                    <include name="loginValidCredentials" />
                    <include name="logoutSuccess" />
                </methods>
            </class>
            <class name="org.jvu.tests.SearchTests">
                <methods>
                    <include name="searchForValidItem" />
                </methods>
            </class>
            <class name="org.jvu.tests.CartTests">
                <methods>
                    <include name="addItemToCartFromHomePage" />
                    <include name="verifyCartTotal" />
                </methods>
            </class>
            <class name="org.jvu.tests.CheckoutTests">
                <methods>
                    <include name="validUserCheckout" />
                </methods>
            </class>
        </classes>
    </test>
</suite>