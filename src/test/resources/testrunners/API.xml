<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestNG" parallel="classes" thread-count="3">

    <listeners>
        <listener class-name="org.framework.listeners.TestListener" />
        <listener class-name="org.framework.listeners.AnnotationTransformer" />
    </listeners>

    <test name="API Tests" preserve-order="false" parallel="methods" thread-count="3" enabled="true">
        <groups>
            <run>
                <include name="api" />
            </run>
        </groups>
        <classes>
            <class name="org.jvu.tests.apitests.ListUsersTests" />
        </classes>
    </test>

</suite>